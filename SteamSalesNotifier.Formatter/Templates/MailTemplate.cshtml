<!DOCTYPE html>
<html>
<head>
    <title>Email Template</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        .header {
            background-color: #3498db;
            color: #ffffff;
            padding: 20px;
            text-align: center;
        }
        .greetings {
            margin-top: 20px;
            text-align: center;
        }
        .games-section {
            margin-top: 30px;
        }
        .game {
            border: 1px solid #ddd;
            margin-bottom: 20px;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome to Our Gaming Platform</h1>
        </div>
        <div class="greetings">
            <p>Hello@* , @userName! *@ We hope you're having a great day.</p>
        </div>
        <div class="games-section">
            <h2>Featured Games with Prizes</h2>
            @foreach (var game in Model.Games)
            {
                <div class="game">
                    <h3>@game.Name</h3>
                    <p>Prize: @game.FinalPrize</p>
                </div>
            }
        </div>
    </div>
</body>
</html>


