<!DOCTYPE html>
<html>
<head>
    <title>Email Template</title>
</head>
<body style="font-family: Arial, sans-serif; font-size: 16px; background-color: #171a21; color: #fff; margin: 0; padding: 0;">

    <div style="max-width: 800px; margin: 0 auto; text-align: center;">

        <div style="background-color: #1b2838; color: #fff; padding: 20px; text-align: center;">
            <h1>Welcome to Our Gaming Platform</h1>
        </div>

        <div style="margin-top: 20px; text-align: center; color: #ddd;">
            <p>Hello! We hope you're having a great day.</p>
        </div>

        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
            <tbody>
                @for (int i = 0; i < Model.Games.Count; i += 2)
                {
                    <tr>
                        <td style="width: 48%; box-sizing: border-box; border: 1px solid #1b2838; border-radius: 5px; margin-bottom: 20px;">

                            <div style="position: relative; overflow: hidden; border-radius: 5px;">
                                <img src="@Model.Games[i].Image" alt="@Model.Games[i].Name" style="max-width: 100%; height: auto; border-radius: 5px; display: block; position: relative; top: 0; left: 0;" oncontextmenu="return false;" ondragstart="return false;" onmousedown="return false;">
                                <!-- Disable right-click and dragging for image -->
                            </div>

                            <h3 style="font-size: 18px; margin: 10px 0; color: #fff;">
                                @Model.Games[i].Name
                            </h3>

                            @if (Model.Games[i].Discounted)
                            {
                                <div style="margin-top: 10px; font-size: 18px; color: #4CAF50;"><b>-@Model.Games[i].DiscountPercent%</b></div>
                            }

                            @if (Model.Games[i].Discounted)
                            {
                                <div style="margin-top: 10px; font-size: 14px;">
                                    <p style="text-decoration: line-through; color: #888;">@Model.Games[i].OriginalPrice @Model.Games[i].Currency</p>
                                    <p style="font-size: 18px; color: #e74c3c; font-weight: bold;">@Model.Games[i].FinalPrice @Model.Games[i].Currency</p>
                                </div>
                            }

                        </td>

                        @if (i + 1 < Model.Games.Count)
                        {
                            <td style="width: 48%; box-sizing: border-box; border: 1px solid #1b2838; border-radius: 5px; margin-bottom: 20px;">

                                <div style="position: relative; overflow: hidden; border-radius: 5px;">
                                    <img src="@Model.Games[i + 1].Image" alt="@Model.Games[i + 1].Name" style="max-width: 100%; height: auto; border-radius: 5px; display: block; position: relative; top: 0; left: 0;" oncontextmenu="return false;" ondragstart="return false;" onmousedown="return false;">
                                    <!-- Disable right-click and dragging for image -->
                                </div>

                                <h3 style="font-size: 18px; margin: 10px 0; color: #fff;">
                                    @Model.Games[i + 1].Name
                                </h3>

                                @if (Model.Games[i + 1].Discounted)
                                {
                                    <div style="margin-top: 10px; font-size: 18px; color: #4CAF50;"><b>-@Model.Games[i + 1].DiscountPercent%</b></div>
                                }

                                @if (Model.Games[i + 1].Discounted)
                                {
                                    <div style="margin-top: 10px; font-size: 14px;">
                                        <p style="text-decoration: line-through; color: #888;">@Model.Games[i + 1].OriginalPrice @Model.Games[i + 1].Currency</p>
                                        <p style="font-size: 18px; color: #e74c3c; font-weight: bold;">@Model.Games[i + 1].FinalPrice @Model.Games[i + 1].Currency</p>
                                    </div>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
